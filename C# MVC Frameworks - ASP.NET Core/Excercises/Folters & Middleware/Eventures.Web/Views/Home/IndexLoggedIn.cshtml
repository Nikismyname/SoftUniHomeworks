<div class="jumbotron" style="background-color:#AFEEEE">
    @if (User.IsInRole("Admin"))
    {
        <h1 class="text-center">Greetings, Adminstrator - @User.Identity.Name!</h1>
        <hr class="hr-2 bg-grey" />
        <h4 class="text-center text-grey">Enjoy your work.</h4>
    }
    else
    {
        <h1 class="text-center">Welcome, @User.Identity.Name!</h1>
        <hr class="hr-2 bg-grey" />
        <h4 class="text-center text-grey">Eventures wishes you an exiting experiance!</h4>
    }
</div>
